<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="AutwitSuite" verbose="1" parallel="tests" thread-count="4">
    <!--
        Default parameter: no filtering.
        During RETRY, RetrySkippedTestsExecutor will overwrite this value
        and pass only the scenario names to run.
    -->
    <parameter name="scenariosToRun" value=""/>
    <test name="AutwitCucumberTests" parallel="methods" thread-count="4">
        <!--
            This value ensures that CucumberTestRunner uses the correct DataProvider.
            NORMAL RUN → DataProvider "scenarios"
            RETRY RUN → Retry executor inserts "scenariosToRun" parameter
                        CucumberTestRunner switches to "filteredScenarios".
        -->
        <parameter name="dataProvider" value="scenarios"/>
        <classes>
            <!-- Runner class integrating with Cucumber + Spring -->
            <class name="com.acuver.autwit.runner.CucumberTestRunner"/>
        </classes>
    </test>
</suite>
